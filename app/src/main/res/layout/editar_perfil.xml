<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Edite Seu Perfil"
        android:textAlignment="center"
        android:textSize="30sp"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/txtNovoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuário:"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <EditText
        android:id="@+id/edtNovoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/txtNovoEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:" />

    <EditText
        android:id="@+id/edtNovoEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/txtNovoSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha:" />

    <EditText
        android:id="@+id/edtNovoSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar preferências"
        android:id="@+id/chkSalvar" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <!-- colocar um spinner aqui pra pessoa escolher o tipo de plantação
         colocar um botao pra voltar?-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnSalvarPerfil"
                android:layout_width="150dp"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                android:text="@string/Salvar_Alteracoes" />


            <Button
                android:id="@+id/btnVoltarEP"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="Menu" />
        </TableRow>
    </TableLayout>
</LinearLayout>

